import { doc, getDoc } from "firebase/firestore";
import { db } from "../firebase";
import { GetService } from "../types";
import { {{entityInterface}} } from "./types";

const get: GetService<{{entityInterface}}> = async (id: string) => {
  const docRef = doc(db, `/{{entityName}}/${id}`);
  const docSnap = await getDoc(docRef);
  if (docSnap.exists()) {
    return {
      ...docSnap.data(),
      id: docSnap.id,
    } as {{entityInterface}};
  }
  return null;
};

export default get;